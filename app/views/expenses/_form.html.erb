<%= bootstrap_form_for(expense) do |f| %>
  <%= f.text_field :title, label: t('expense.title'), autofocus: true %>
  <%= f.number_field :amount, label: t('expense.amount'), step: 0.01, placeholder: '0,00', append: "â‚¬" %>
  <%= f.form_group :intake do %>
    <%= f.check_box :intake, label: t('expense.intake_checkbox') %>
  <% end %>
  <%= f.date_field :purchesed_on, label: t('expense.purchesed_on'), value: Date.today %>
  <%= f.select('category', Expense::CATEGORIES.collect {|k, v| [v, k]}, {include_blank: true, label: t('expense.category')}, wrapper: { class: 'category_select'}) %>
  <%= f.submit t('expense.create'), class: 'btn btn-primary' %>
  <% if controller_name.eql?('expenses') && action_name.eql?('edit')  %>
    <%= link_to t('expense.delete_expense'), expense_path(expense), method: :delete, data: { confirm: t('expense.confirm_delete') }, class: 'btn btn-danger'%>
  <% end %>
<% end %>
