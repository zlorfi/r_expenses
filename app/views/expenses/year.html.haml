= bootstrap_form_tag(url: annual_expenses_path, method: :get) do |f|
  = f.select('date_list',
    Expense.year_list_as_array,
    {include_blank: true, label: t('expense.overview_year_select')},
    wrapper: { class: 'category_select'})
%h1
  = t('expense.year_overview')
  %small.text-muted
    = given_year
= react_component('Line', props: { lineDataUrl: api_v1_charts_linechart_by_year_path(given_date: given_year) })
= react_component('Bar', props: { barDataUrl: api_v1_charts_barchart_by_year_path(given_date: given_year) })