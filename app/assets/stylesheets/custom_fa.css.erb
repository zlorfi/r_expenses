@font-face {
  font-family: 'custom_fa';
  src:
    url('<%= font_path('custom_fa.woff') %>') format('woff'),
    url('<%= font_path('custom_fa.ttf') %>') format('truetype'),
    url('<%= font_path('custom_fa.svg') %>#custom_fa') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="fa-"], [class*=" fa-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'custom_fa' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.fa-trash-o:before {
  content: "\f014";
}
.fa-pencil:before {
  content: "\f040";
}
